public LoginInfoVO getEmployeeIDandConnectionDetails(LoginInfoVO loginInfo) throws Exception {
		logger.debug("Method getEmployeeIDByUserID: STARTED");
		
		try{
			
			Connection con = jdbcTemplate.getDataSource().getConnection();
    		if(con != null)
    		{
    			loginInfo.setDbServerName(con.getMetaData().getURL());
    			loginInfo.setDbUserName(con.getMetaData().getUserName());
    			con.close();
    		}
    		
			if("".equals(loginInfo.getEmployeeID()) || loginInfo.getEmployeeID()==null)
			{			 
			String emplID = (String)jdbcTemplate.queryForObject(GET_EMPLOYEE_ID_QUERY, new Object[]{loginInfo.getLoginUserID()}, String.class);
			loginInfo.setEmployeeID(emplID) ; 
			}
						
			
			
		} catch(Exception e){
			
		
					
			logger.error("DB failure to fetch employee ID.",e);
			throw new Exception("DB failure to fetch employee ID.");
			
		}
		logger.debug("Method getEmployeeIDByUserID: END");
		return loginInfo;
	}
