	NSEditor.prototype.__documentCopyPasteListener = function(event)
	{
		var event = this.util.getEvent(event);
		var cutHandler = function(data)
		{
			
		};
		var copyHandler = function(data)
		{
			
		};
		var pasteHandler = function(data)
		{
			console.log(data);
		};
		var getText = function()
		{
			if(event.clipboardData && event.clipboardData.getData) 
			{
	            var text = "";
	            // IE
	            if (window.clipboardData && window.clipboardData.getData) 
	            { 
	            	text = window.clipboardData.getData("Text");
	            } 
	            else if (event.clipboardData && event.clipboardData.getData) 
	            {
	            	/*for(var count = 0;count < event.clipboardData.types.length;count++)
	            	{
	            		console.log(event.clipboardData.types[count] + " : " + event.clipboardData.getData(event.clipboardData.types[count]));
	            	}*/
	            	//E = e.clipboardData.getData("text/html") : /text\/rtf/.test(n) && t.browser.safari ? E = w : /text\/plain/.test(n) && !t.browser.mozilla && (E = t.html.escapeEntities(e.clipboardData.getData("text/plain")).replace(/\n/g, "<br>")),
	            	var E = event.clipboardData.getData("text/html");
	            	console.log(E.match(/(class=\"?Mso|class=\'?Mso|class="?Xl|class='?Xl|class=Xl|style=\"[^\"]*\bmso\-|style=\'[^\']*\bmso\-|w:WordDocument)/gi));
	            	text = event.clipboardData.getData("text/plain");
	            }
	            return text;
	        }
			return "";
		};
		var text = getText();
		switch(event.type)
		{
			case "cut":
				cutHandler(text);
			break;
			case "copy":
				copyHandler(text);
			break;
			case "paste":
				pasteHandler(text);
			break;
		}
	};
	
	NSEditor.prototype.__textAreaClickHandler = function(event)
	{
		var target = this.util.getTarget(event);
		this.__updateToolbar(target);
	};
	
	NSEditor.prototype.__textAreaScrollHandler = function(event)
	{
		if(!this.__timeOutInterval)
		{
			var lineNumberHeight = 15;
			var self = this;
			this.__timeOutInterval = setTimeout( function() 
			{
				var listenerComponent = self.__getScrollComponent();
				var scrollTop = listenerComponent.scrollTop;
				var firstLine = Math.floor((scrollTop / lineNumberHeight) + 1);
				var remainingScroll = (scrollTop / lineNumberHeight) % 1;

				self.__drawLineNumbers(firstLine);
				self.__divLineNumberWrapper.style.marginTop = (-1 * (remainingScroll * lineNumberHeight)) + "px";
				self.__timeOutInterval = null;
			}, 150);
		}
	};
	
	NSEditor.prototype.__textAreaResizeHandler = function(event)
	{
		var listenerComponent = this.__getScrollComponent();
		this.__divLineNumberContainer.style.height = (listenerComponent.clientHeight) + "px";
	};
	
