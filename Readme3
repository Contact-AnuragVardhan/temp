<body onload="initialize()">
	<div>
		&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
		<textarea id="txtDemo" rows="10" cols="100" placeholder="Enter a Text"></textarea>
		
		
	</div>
	
	
	<script>
		var util = null;
		function initialize()
		{
			util = new NSUtil();
			initailizeSimpleDemo();
			
		}
		
		function initailizeSimpleDemo()
		{
			var txtDemo = document.querySelector("#txtDemo");
			var setting = {enableToolBar: true,
							toolBarButton: ['fullscreen', 'bold', 'italic', 'underline', 'strikeThrough','justifyCenter','justifyLeft','justifyRight','justifyFull', 'subscript', 'superscript', 'fontFamily', 'fontSize', '|', 'color', 'emoticons', 'inlineStyle', 'paragraphStyle', '|', 'paragraphFormat', 'align', 'formatOL', 'formatUL', 'outdent', 'indent', '-', 'insertLink', 'insertImage', 'insertVideo', 'insertFile', 'insertTable', '|', 'quote', 'insertHR', 'undo', 'redo', 'clearFormatting', 'selectAll', 'html'],
							enableLineNumber: true,enableAutoSuggest: true,mode:NSEditor.MODE_IFRAME,
							autoSuggestTriggers:[{keyCode: 190}, // dot key
							                     {keyCode: 32, ctrlKey: true, preventDefault: true}] //ctrl+space key
						  };
			var nsEditor = new NSEditor(txtDemo,setting);
			
		}
		
		
	</script>
</body>

