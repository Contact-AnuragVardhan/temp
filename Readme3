private container: any;   

    public removeElementFunction:any;
   
    constructor(public props: any, public state: any) 
    {        
        super(props,state); 
    
        this.state = {desc:'',keyLabel:'',valueLabel:'',key:'',value:'',list:[] , buttonLabel:''} 
       
    }
    
    componentDidMount() 
    {     
        
    }
    
    setInitialData(data:any):any
    {
        
        this.setState({desc:data.desc,keyLabel:data.keyLabel,valueLabel:data.valueLabel,key:data.key,value:data.value,buttonLabel:data.buttonLabel,list:data.list}) 
        
        
    }
    
  
    
    setUpdatedData(data:any):any
    {
        
        this.setState({list:data.list}) 
        
        
    }
    

    getElement(): any
    {
        return this.container;
    };
    
    
    removeListElement(key:any): any
    {
        this.removeElementFunction(key) ; 
    };
    
    
    
    
   render() {
       const style = {"maxHeight":"500px"};
    
    
       
       return (
             <div ref={(ref) => this.container = ref} style={style}>
         
             
            
           
             
                     
                     <div className="row" style={{overflow:"auto"}}>
                     <div className="col-md-12" style={{margin:"0px"}} >
                        
                             <span className="col-md-6" style={{backgroundColor:"#f0f0f0", height:"30px" ,  border:"1pt solid" , borderRightWidth: "0pt" }}  >
                             <b>{this.state.keyLabel}</b>
                             </span>
                             <span className="col-md-6" style={{backgroundColor:"#f0f0f0", height:"30px",   border:"1pt solid"}}>
                             <b>{this.state.valueLabel}</b>
                             </span>
                              
                         
                     </div>
                             
                             {this.state.list.map((data,key) => {
                                 return <div key={key} className="col-md-12"  >
                             
                             <span className="col-md-6" style={{ height:"30px" , paddingTop:"5px"  , backgroundColor:"#FDFEFE" , borderBottomWidth:'1pt', borderBottomStyle:"solid"  }}  >
                             <b>{data[this.state.key]}</b>
                             </span>
                             <span className="col-md-5" style={{ height:"30px", paddingTop: "5px" , backgroundColor:"#FDFEFE" , borderBottomWidth:'1pt', borderBottomStyle:"solid" }}>
                             <b>{data[this.state.value]}</b>
                             </span>
                             <span className="col-md-1" style={{ height:"30px", paddingTop: "5px" , backgroundColor:"#FDFEFE" , borderBottomWidth:'1pt', borderBottomStyle:"solid" }} >
                             <i className="pull-right fa fa-times fa-1x" onClick={this.removeListElement.bind(this,key)} ></i>
                             </span>
                          </div>
                             })}
                             
<div className="col-md-12"  >
                             
                             
                             
                         
                          </div>
                 </div>
                     
                             
           
                     
                     
                     
                                     
                         
          
          
        
             </div>
               
       )
   }
