	NSUtil.prototype.css = function (element,key,value)
	{
		var styles;
	    if (this.isUndefined(value)) 
	    {
	        if (this.isString(key)) 
	        {
	            return element.style[key];
	        }
	        styles = key;
	    } 
	    else 
	    {
	        styles = {};
	        styles[key] = value;
	    }
	    for(var style in styles)
	    {
	    	element.style[style] = styles[style];
	    }
	};
	
